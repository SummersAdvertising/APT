<%= form_for @candidate, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :title, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :title, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :vote_yes, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :vote_yes, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :vote_no, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :vote_no, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :vote_total, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :vote_total, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :candidate_hash, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :candidate_hash, :class => 'text_area' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                candidates_path, :class => 'btn' %>
  </div>
<% end %>
