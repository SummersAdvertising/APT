body{width:873px;height:260px;background:url("<%= asset_data_uri "vote-bg.jpg" %>") 0 0 no-repeat}
h1{font:300 27px "微軟正黑體";color:#fff;margin:25px 0 0 0;text-align:center}

/*---------------------------------------------------------------------------- 投票 ---*/

#button{width:402px;margin:50px auto 20px auto}
#button a{display:block;width:179px;height:97px;background-color:#024E96;border-radius:10px;background-position:center center;background-repeat:no-repeat;float:left;margin:10px;
border-bottom:2px solid #012647;
border-top:1px solid #739DC5;
border-left:1px solid #1861A6;
border-right:1px solid #1861A6}
#button a:active{
border-bottom:1px solid #739DC5;
border-top:2px solid #012647;
border-left:2px solid #012647;
border-right:none}
#button a:hover{background-color:#0256A6}

#button #yes{background-image:url("<%= asset_data_uri "yes.png" %>")}
#button #no{background-image:url("<%= asset_data_uri "no.png" %>")}

/*---------------------------------------------------------------------------- 結果 ---*/

#hgroup{width:730px;margin:0 auto}
#hgroup h1{text-align:left}
#hgroup h2{color:#fff;font:300 20px "微軟正黑體";margin:0 0 20px 0}

#result{width:730px;margin:0 auto}
#result .bar{display:block;height:30px}
#result .count{font:300 27px "微軟正黑體"}
#result .most{font:900 37px "微軟正黑體"!important}

#yes-bar{margin:0 0 10px 0}
#yes-bar .bar{background:#FFD200;width:70%}
#yes-bar .count{color:#FFD200}

#no-bar .bar{background:#BFBFBF;width:30%}
#no-bar .count{color:#fff}